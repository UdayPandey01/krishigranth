generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Farmer {
  id        String   @id @default(uuid())
  clerkId   String?  @unique
  username  String
  age       Int
  dob       DateTime
  location  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  crops     Crop[]
}

model Crop {
  id           String   @id @default(uuid())
  cropName     String
  quantity     Int
  unitPrice    Int
  harvestDate  DateTime
  farmLocation String
  description  String
  fullName     String
  email        String
  image        String
  farmerId     String
  farmer       Farmer   @relation(fields: [farmerId], references: [id])
}
